<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">
        <EditText
            android:id="@+id/mDisplay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/app_margin"
            android:gravity="right|center_vertical"
            android:background="@color/display_background"
            android:textColor="@color/display_text_color"
            android:textSize="42sp"
            android:textStyle="italic"
            android:editable="false"
            android:text="@string/display_default"/>
        <EditText
            android:id="@+id/mDisplayOperations"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_margin="@dimen/app_margin"
            android:gravity="right|center_vertical"
            android:textColor="@color/text_operations_color"
            android:textSize="24sp"
            android:background="@color/display_background"
            android:maxLength="12"
            android:editable="false"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:id="@+id/btnResetAll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/app_margin"
                android:background="@drawable/reset_buttons_onclick"
                android:text="AC"
                android:textColor="@color/text_on_buttons"
                android:textSize="@dimen/textSize"/>
            <Button
                android:id="@+id/btnReset"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/app_margin"
                android:background="@drawable/reset_buttons_onclick"
                android:text="C"
                android:textColor="@color/text_on_buttons"
                android:textSize="@dimen/textSize"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center">
            <Button
                android:id="@+id/btnMemoryClear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/app_margin"
                android:background="@drawable/reset_buttons_onclick"
                android:text="MC"
                android:textColor="@color/text_on_buttons"
                android:textSize="@dimen/textSize"/>
            <Button
                android:id="@+id/btnSeven"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/app_margin"
                android:background="@drawable/number_buttons_onclick"
                android:text="7"
                android:textColor="@color/text_on_buttons"
                android:textSize="@dimen/textSize"/>
            <Button
                android:id="@+id/btnEight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/app_margin"
                android:background="@drawable/number_buttons_onclick"
                android:text="8"
                android:textColor="@color/text_on_buttons"
                android:textSize="@dimen/textSize"/>
            <Button
                android:id="@+id/btnNine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/app_margin"
                android:background="@drawable/number_buttons_onclick"
                android:text="9"
                android:textColor="@color/text_on_buttons"
                android:textSize="@dimen/textSize"/>
            <Button
                android:id="@+id/btnDivision"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/app_margin"
                android:background="@drawable/operation_buttons_onclick"
                android:text="/"
                android:textColor="@color/text_on_buttons"
                android:textSize="@dimen/textSize"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:id="@+id/btnMemoryResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/app_margin"
                android:background="@drawable/memory_buttons_onclick"
                android:text="MR"
                android:textColor="@color/text_on_buttons"
                android:textSize="@dimen/textSize"/>
            <Button
                android:id="@+id/btnFour"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/app_margin"
                android:background="@drawable/number_buttons_onclick"
                android:text="4"
                android:textColor="@color/text_on_buttons"
                android:textSize="@dimen/textSize"/>
            <Button
                android:id="@+id/btnFive"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/app_margin"
                android:background="@drawable/number_buttons_onclick"
                android:text="5"
                android:textColor="@color/text_on_buttons"
                android:textSize="@dimen/textSize"/>
            <Button
                android:id="@+id/btnSix"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/app_margin"
                android:background="@drawable/number_buttons_onclick"
                android:text="6"
                android:textColor="@color/text_on_buttons"
                android:textSize="@dimen/textSize"/>
            <Button
                android:id="@+id/btnMultiplication"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/app_margin"
                android:background="@drawable/operation_buttons_onclick"
                android:text="X"
                android:textColor="@color/text_on_buttons"
                android:textSize="@dimen/textSize"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:id="@+id/btnMemoryAddition"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/app_margin"
                android:background="@drawable/memory_buttons_onclick"
                android:text="M+"
                android:textColor="@color/text_on_buttons"
                android:textSize="@dimen/textSize"/>
            <Button
                android:id="@+id/btnOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/app_margin"
                android:background="@drawable/number_buttons_onclick"
                android:text="1"
                android:textColor="@color/text_on_buttons"
                android:textSize="@dimen/textSize"/>
            <Button
                android:id="@+id/btnTwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/app_margin"
                android:background="@drawable/number_buttons_onclick"
                android:text="2"
                android:textColor="@color/text_on_buttons"
                android:textSize="@dimen/textSize"/>
            <Button
                android:id="@+id/btnThree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/app_margin"
                android:background="@drawable/number_buttons_onclick"
                android:text="3"
                android:textColor="@color/text_on_buttons"
                android:textSize="@dimen/textSize"/>
            <Button
                android:id="@+id/btnSubtraction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/app_margin"
                android:background="@drawable/operation_buttons_onclick"
                android:text="-"
                android:textColor="@color/text_on_buttons"
                android:textSize="@dimen/textSize"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:id="@+id/btnMemorySubtraction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/app_margin"
                android:background="@drawable/memory_buttons_onclick"
                android:text="M-"
                android:textColor="@color/text_on_buttons"
                android:textSize="@dimen/textSize"/>
            <Button
                android:id="@+id/btnPoint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/app_margin"
                android:background="@drawable/number_buttons_onclick"
                android:text="."
                android:textColor="@color/text_on_buttons"
                android:textSize="@dimen/textSize"/>
            <Button
                android:id="@+id/btnZero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/app_margin"
                android:background="@drawable/number_buttons_onclick"
                android:text="0"
                android:textColor="@color/text_on_buttons"
                android:textSize="@dimen/textSize"/>
            <Button
                android:id="@+id/btnResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/app_margin"
                android:background="@drawable/result_button_onclick"
                android:text="="
                android:textColor="@color/text_on_buttons"
                android:textSize="@dimen/textSize"/>
            <Button
                android:id="@+id/btnAddition"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/app_margin"
                android:background="@drawable/operation_buttons_onclick"
                android:text="+"
                android:textColor="@color/text_on_buttons"
                android:textSize="@dimen/textSize"/>
        </TableRow>
        </LinearLayout>
</LinearLayout>